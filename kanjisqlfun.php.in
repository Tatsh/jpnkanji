function makedictlink($s)
{
  $s = ereg_replace('[-. ]', '', $s);

  $url = 'find='.urlencode($s);
  return '<a href="'.htmlspecialchars($url).'">'.$s.'</a>';
}

function verblink($s)
{
  return 'verb='.urlencode($s);
}


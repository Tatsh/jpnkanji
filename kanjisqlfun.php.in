function mysql_fetch_all($queryid)
{
  $struct = array();
  $primary = -1;
  while(($tmp2 = mysql_fetch_field($queryid)))
    { if($tmp2->primary_key)$primary = count($struct); $struct[] = $tmp2; }
  $tab = array();
  while(($tmp2 = mysql_fetch_array($queryid)))
    $tab[($primary<0) ? count($tab) : $tmp2[$primary]] = $tmp2;
  return $tab;
}

